set -e

mkdir -p ${BOSH_INSTALL_TARGET}/src
cp -a . ${BOSH_INSTALL_TARGET}/src
export GOPATH=$BOSH_INSTALL_TARGET

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH
go build github.com/cloudfoundry-incubator/linux-circus/tailor
go build github.com/cloudfoundry-incubator/linux-circus/soldier
go build github.com/cloudfoundry-incubator/linux-circus/spy

tar -czf ${BOSH_INSTALL_TARGET}/linux-circus.tgz tailor soldier spy
